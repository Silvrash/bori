		"figlet": "^1.5.0",
		"uuid": "^8.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.2.0",
		"@commitlint/config-conventional": "^8.2.0",
		"@types/figlet": "^1.2.0",
		"@types/uuid": "^8.3.0",
		"cz-conventional-changelog": "^3.1.0",
		"husky": "^4.2.3",
		"jest": "^24.8.0",
		"prettier": "^1.19.1",
		"ts-node": "^8.2.0",
		"tslint": "^5.20.1",
		"tslint-config-prettier": "^1.18.0",
		"tslint-config-standard": "^9.0.0",
		"tspath": "^1.3.7",
		"typescript": "^4.0.3"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
