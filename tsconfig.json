{
	"compilerOptions": {
		"target": "es2015",
		"module": "commonjs",
		"outDir": "bori",
		"esModuleInterop": true,
		"strict": true,
		"sourceMap": false,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"]
}
